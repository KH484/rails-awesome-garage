<div class="banner" style="background-image: url(<%= asset_path 'banner.jpg' %>)">
  <div class="text-start">
    <h1>Gone In 60 Seconds</h1>
  </div>
</div>



<ul class="listing">
  <% @cars.each do |car| %>
    <li><%= car.brand %></li>
    <li><%= car.model %></li>
    <li><%= car.owner.nickname %></li>
    <%= link_to "More details", car_path(car) %>
  <% end %>
</ul>
