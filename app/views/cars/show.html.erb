<h1>This is my page for <%= @car.brand %></h1>

<ul>
  <li><%= @car.model %></li>
  <li><%= @car.year %></li>
  <li><%= @car.fuel %></li>
</ul>

<%= simple_form_for [@car, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.submit %>
<% end %>

<%= @car.reviews.last.comment %>
